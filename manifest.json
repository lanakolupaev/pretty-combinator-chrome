{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/pretty_y_icon_16.png",
    "48": "images/pretty_y_icon_48.png",
    "128": "images/pretty_y_icon_128.png"
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": ["*://news.ycombinator.com/", "*://news.ycombinator.com/news*"],
      "css": ["css/news.css"]
    },
    {
      "matches": ["*://news.ycombinator.com/item*"],
      "css": ["css/item.css"]
    },
    {
      "matches": ["*://news.ycombinator.com/user*"],
      "css": ["css/user.css"]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_title": "PrettyY",
    "default_icon": "images/pretty_y_icon_16.png"
  },
  "permissions": [
    "background",
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
